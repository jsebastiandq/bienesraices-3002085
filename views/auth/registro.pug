extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes Raices 
            span.font-normal SENA
        h2.text-center.text-2xl.font-extrabold=tituloPagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

    
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(action="/auth/registro", method="POST" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken )
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="name") Nombre
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-mb.placeholder-gray-400(placeholder="Escribe tu nombre" type="name" name="nombre" value=usuario ? usuario.nombre: "")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-mb.placeholder-gray-400(placeholder="Escribe tu email" type="email" name="email" value=usuario ? usuario.email: "")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-mb.placeholder-gray-400(placeholder="Escribe tu contraseña" type="password" name="password")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="repeat_password") Contraseña
                        input#repeat_password.w-full.px-3.py-2.border.border-gray-300.rounded-mb.placeholder-gray-400(placeholder="Repite tu contraseña" type="password" name="repeat_password")
                    .flex.items-center.justify-center
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes una cuenta? Inicia Sesión
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Registrarse")

                        